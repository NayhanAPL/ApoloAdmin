            <Label FontSize="12" FontWeight="SemiBold" Foreground="DarkSlateGray" Margin="10,10,0,0">Diseño y desarrollo:</Label>
            <Label FontSize="12" FontWeight="SemiBold" Foreground="Black" Margin="0,10,10,0">Nayhan Provedo Labrada</Label>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label FontSize="12" FontWeight="SemiBold" Foreground="DarkSlateGray" Margin="10,0,0,10">Correo:</Label>
            <Label FontSize="12" FontWeight="SemiBold" Foreground="Blue" Margin="0,0,10,10">nayhanprovedolabrada@gmail.com</Label>
        </StackPanel>
    </Grid>
</Window>
